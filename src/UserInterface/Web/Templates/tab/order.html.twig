{% extends 'base.html.twig' %}
{% block title %}Place order{% endblock %}
{% block content %}
    {{ form_start(form) }}
    <fieldset>
        <table class="table">
            <thead>
            <tr>
                <td>Menu #</td>
                <td>Description</td>
                <td>Number To Order</td>
            </tr>
            </thead>
            <tbody>
            {% for item in form.items %}
            <tr>
                <td>{{ form_row(item.menuNumber) }}</td>
                <td>{{ form_row(item.description) }}</td>
                <td>{{ form_row(item.numberToOrder) }}</td>
            </tr>
            {% endfor %}
            </tbody>
        </table>

        <button type="submit" class="btn btn-primary">Place Order</button>
    </fieldset>
    {{ form_end(form) }}
{% endblock %}
